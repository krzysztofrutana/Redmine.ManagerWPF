<Window
    x:Class="Redmine.ManagerWPF.Views.MainWindow"
    x:Name="MainWindowWindow"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:vm="clr-namespace:Redmine.ManagerWPF.Desktop.ViewModels"
    xmlns:treeModels="clr-namespace:Redmine.ManagerWPF.Desktop.Models.Tree"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:customBehaviors="clr-namespace:Redmine.ManagerWPF.Desktop.Behaviors"
    xmlns:uc="clr-namespace:Redmine.ManagerWPF.Desktop.Views.UserControls"
    Title="Redmine Manager"
    Icon="/logo.ico"
    Width="1000"
    MinHeight="650"
    MinWidth="800"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    Closing="Window_Closing"
    StateChanged="MainWindowWindow_StateChanged"
    xmlns:tb="http://www.hardcodet.net/taskbar">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem FontSize="12" Header="_Synchronizacja">
                    <MenuItem FontSize="12" Command="{Binding SynchronizeProjectsCommand}" Header="_Synchronizuj projekty" />
                    <MenuItem FontSize="12" Command="{Binding SynchronizeIssuesCommand}" Header="_Synchronizuj zadania" />
                </MenuItem>
                <MenuItem FontSize="12" Header="_Opcje">
                    <MenuItem FontSize="12" Command="{Binding OpenSettingsDialogCommand}" Header="_Ustawienia" />
                    <MenuItem FontSize="12" Header="_Baza danych">
                        <MenuItem FontSize="12" Command="{Binding OpenCreateBackupDialogCommand}" Header="_Utwórz kopię" />
                        <MenuItem FontSize="12" Command="{Binding OpenRestoreBackupDialogCommand}" Header="_Przywróć kopię" />
                    </MenuItem>
                </MenuItem>
                <MenuItem FontSize="12" Header="_Raporty">
                    <MenuItem FontSize="12" Command="{Binding OpenDailyRaportDialogCommand}" Header="_Dzienny raport" />
                </MenuItem>
                <MenuItem FontSize="12" Header="_Wyszukiwanie">
                    <MenuItem FontSize="12" Command="{Binding OpenSearchWindowCommand}" Header="_W zadaniach i komentarzach" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <tb:TaskbarIcon
            x:Name="TaskBarIcon"
            ToolTipText="Redmine Manager"
            LeftClickCommand="{Binding ShowMainWindowCommand}" 
            LeftClickCommandParameter="{Binding ElementName=MainWindowWindow}" IconSource="/logo.ico"
            >
        </tb:TaskbarIcon>
        <Grid
            Grid.Row="1"
            Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="24" Margin="10,0,0,10" Text="Projekt:" />
            <ComboBox
                x:Name="projectComboBox"
                HorizontalAlignment="Stretch"
                Margin="5,0,10,0"
                MinWidth="200"
                Grid.Column="1"
                Height="70"
                MinHeight="70"
                Padding="10,0,0,0"
                VerticalAlignment="Center"
                SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                ItemsSource="{Binding Projects}">
                <Behaviors:Interaction.Triggers>
                    <Behaviors:EventTrigger EventName="SelectionChanged" SourceObject="{Binding ElementName=projectComboBox}">
                        <Behaviors:InvokeCommandAction Command="{Binding LoadIssuesForProjectAsyncCommand}" />
                    </Behaviors:EventTrigger>
                    <Behaviors:EventTrigger EventName="Loaded" SourceObject="{Binding ElementName=projectComboBox}">
                        <Behaviors:InvokeCommandAction Command="{Binding LoadProjectsAsyncCommand}" />
                    </Behaviors:EventTrigger>
                    <Behaviors:EventTrigger EventName="DropDownOpened" SourceObject="{Binding ElementName=projectComboBox}">
                        <Behaviors:InvokeCommandAction Command="{Binding LoadProjectsAsyncCommand}" />
                    </Behaviors:EventTrigger>
                </Behaviors:Interaction.Triggers>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel VerticalAlignment="Stretch"  Margin="0,0,0,0">
                            <TextBlock
                                Margin="0,0,0,0"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="{Binding Name}" />
                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal"  Margin="0,0,0,0">
                                <TextBlock FontSize="11" Text="Data rozpoczęcia:" />
                                <TextBlock FontSize="11" Margin="10,0,0,0" Text="{Binding DataStart}" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
        <TreeView
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="0"
            MinHeight="400"
            Margin="10"
            VerticalAlignment="Stretch"
            ItemsSource="{Binding Issues}">
            <i:Interaction.Behaviors>
                <customBehaviors:MainWindowTreeViewBehavior />
            </i:Interaction.Behaviors>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type treeModels:TreeModel}" ItemsSource="{Binding Children}">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Name}" />
                        <TextBlock Margin="20,0,0,0" FontWeight="Bold" Foreground="Green" Grid.Column="1" Text="Wykonane" Visibility="{Binding Done, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </Grid>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Grid Grid.Row="1" Grid.Column="1" Visibility="{Binding ViewProjectDetails, Converter={StaticResource BooleanToVisibilityConverter}}">
            <uc:ProjectShortInfo VerticalAlignment="Center" Margin="0,10,0,10" />
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1" Visibility="{Binding ViewIssueDetails, Converter={StaticResource BooleanToVisibilityConverter}}">
            <uc:IssueForm Margin="0,10,0,10" />
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1" Visibility="{Binding ViewCommentDetails, Converter={StaticResource BooleanToVisibilityConverter}}">
            <uc:CommentForm Margin="0,10,0,10" />
        </Grid>
        <Grid Grid.Row="3" Grid.RowSpan="2" Grid.Column="1" Visibility="{Binding ViewTimeIntervalList, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ScrollViewer>
                <uc:TimeIntervalList Margin="0,10,0,10" />
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="4" Margin="10,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Command="{Binding AddIssueForProjectCommand}" Grid.Column="0" HorizontalAlignment="Center" Content="Dodaj zadanie"></Button>
            <Button Command="{Binding DeleteIssueFromProjectCommand}" Grid.Column="1" HorizontalAlignment="Center" Content="Usuń zadanie"></Button>
        </Grid>
    </Grid>
</Window>